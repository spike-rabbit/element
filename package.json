{
  "name": "siemens-element",
  "version": "1.0.3",
  "description": "Siemens Element open source theme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:spike-rabbit/element.git"
  },
  "author": {
    "name": "Siemens AG",
    "email": "info@siemens.com"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0 || ^22.0.0",
    "yarn": "Please use NPM to install dependencies.",
    "npm": "10 - 11"
  },
  "commitlint": {
    "extends": [
      "@siemens/commitlint-config/.commitlintrc.js"
    ]
  },
  "prettier": "@siemens/prettier-config/.prettierrc.json",
  "scripts": {
    "start": "ng serve",
    "format": "prettier --log-level warn --write .",
    "lint:format": "prettier --check .",
    "lint:commit": "commitlint --from=origin/main",
    "lint:ng": "ng lint",
    "build:examples": "ng build",
    "build:examples:prod": "ng build --configuration production",
    "build:examples:aot": "ng build --configuration aot",
    "build:all": "npm run translate:build && npm run lib:build && npm run live-preview:build",
    "build:all:update-translatable-keys": "npm exec update-translatable-keys",
    "lib:build": "ng build element-ng && cpy \"projects/element-ng/*.scss\" \"./dist/@spike-rabbit/element-ng\" && cpy \"{LICENSE.md,README.md}\" \"./dist/@spike-rabbit/element-ng/\"",
    "lib:test": "ng test element-ng",
    "lib:test:browser": "cross-env HEADLESS=0 ng test element-ng",
    "translate:test": "ng test element-translate-ng",
    "translate:build": "ng build element-translate-ng && cpy LICENSE.md \"./dist/@spike-rabbit/element-translate-ng/\"",
    "docs:prepare": "poetry install",
    "docs:build": "poetry run mkdocs build --strict",
    "docs:serve": "poetry run mkdocs serve",
    "live-preview:build": "ng build live-preview",
    "prepare": "husky; exit 0",
    "postversion": "node ./postversion.js && npm run format"
  },
  "workspaces": [
    "projects/element-translate-ng",
    "projects/element-theme",
    "projects/live-preview"
  ],
  "dependencies": {
    "@angular/animations": "19.0.6",
    "@angular/cdk": "19.0.5",
    "@angular/common": "19.0.6",
    "@angular/core": "19.0.6",
    "@angular/forms": "19.0.6",
    "@angular/platform-browser": "19.0.6",
    "@angular/platform-browser-dynamic": "19.0.6",
    "@angular/router": "19.0.6",
    "@ngx-translate/core": "16.0.4",
    "rxjs": "7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular-builders/custom-esbuild": "^19.1.0",
    "@angular-devkit/build-angular": "19.0.7",
    "@angular/cli": "19.0.6",
    "@angular/compiler": "19.0.6",
    "@angular/compiler-cli": "19.0.6",
    "@angular/language-service": "19.0.6",
    "@angular/localize": "19.0.6",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.25.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@siemens/commitlint-config": "2.1.1",
    "@siemens/eslint-config-angular": "2.1.1",
    "@siemens/eslint-plugin-defaultvalue": "^2.1.1",
    "@siemens/prettier-config": "2.1.1",
    "@siemens/stylelint-config-scss": "2.1.1",
    "@types/jasmine": "5.1.7",
    "@types/node": "~22.14.0",
    "angular-eslint": "19.3.0",
    "cpy-cli": "5.0.0",
    "eslint": "9.25.1",
    "eslint-plugin-headers": "1.2.1",
    "eslint-plugin-perfectionist": "4.12.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-tsdoc": "0.4.0",
    "husky": "9.1.7",
    "jasmine-core": "5.6.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-firefox-launcher": "2.1.3",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "karma-jasmine-seed-reporter": "0.2.0",
    "karma-junit-reporter": "2.0.1",
    "karma-spec-reporter": "0.0.36",
    "ng-packagr": "19.0.1",
    "postcss": "8.5.3",
    "postcss-scss": "4.0.9",
    "prettier": "3.5.3",
    "semantic-release": "^24.2.3",
    "stylelint": "16.19.0",
    "stylelint-scss": "6.11.1",
    "typescript": "5.5.3",
    "typescript-eslint": "8.31.0"
  },
  "optionalDependencies": {
    "@playwright/test": "1.52.0",
    "@simpl/brand": "^0.1.3",
    "@simpl/element-icons": "^1.28.0"
  }
}
