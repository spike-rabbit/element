{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "module": "es2022",
    "moduleResolution": "Bundler",
    "importHelpers": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2022",
    "strict": true,
    "allowUmdGlobalAccess": true,
    "lib": ["es2022", "dom"],
    "isolatedModules": true,
    "paths": {
      "@spike-rabbit/element-ng": ["projects/element-ng/public-api.ts"],
      "@spike-rabbit/element-ng/*": ["projects/element-ng/*"],
      "@spike-rabbit/element-translate-ng": [
        "dist/@spike-rabbit/element-translate-ng/public-api.ts"
      ],
      "@spike-rabbit/element-translate-ng/*": ["dist/@spike-rabbit/element-translate-ng/*"],
      "@spike-rabbit/live-preview": ["projects/live-preview/public-api.ts"],
      "@spike-rabbit/live-preview/*": ["projects/live-preview/*"]
    }
  },
  "exclude": ["dist/**", "testing/**/*.ts"],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictTemplates": true,
    "strictNullChecks": true
  }
}
