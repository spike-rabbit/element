{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "paths": {
      "@spike-rabbit/element-ng": ["dist/@spike-rabbit/element-ng"],
      "@spike-rabbit/element-ng/*": ["dist/@spike-rabbit/element-ng/*"],
      "@spike-rabbit/element-translate-ng": ["dist/@spike-rabbit/element-translate-ng"],
      "@spike-rabbit/element-translate-ng/*": ["dist/@spike-rabbit/element-translate-ng/*"],
      "@spike-rabbit/live-preview": ["dist/@spike-rabbit/live-preview"],
      "@spike-rabbit/live-preview/*": ["dist/@spike-rabbit/live-preview/*"]
    },
    "useDefineForClassFields": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
