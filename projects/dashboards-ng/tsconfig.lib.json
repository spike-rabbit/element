{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declaration": true,
    "inlineSources": true,
    "types": ["../element-translate-ng/localize-types/index.ts", "zone.js"],
    "lib": ["dom", "es2018"],
    "paths": {
      "@spike-rabbit/element-translate-ng": ["dist/@spike-rabbit/element-translate-ng"],
      "@spike-rabbit/element-translate-ng/*": ["dist/@spike-rabbit/element-translate-ng/*"],
      "@spike-rabbit/element-ng": ["dist/@spike-rabbit/element-ng"],
      "@spike-rabbit/element-ng/*": ["dist/@spike-rabbit/element-ng/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "compilationMode": "partial"
  },
  "exclude": ["**/*.spec.ts", "test"]
}
